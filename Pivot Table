SELECT 
    ShipperID,
    SUM(CASE WHEN YEAR(ShipDate) = 2022 AND DATEPART(QUARTER, ShipDate) = 1 THEN Quantity ELSE 0 END) AS '2022_Q1',
    SUM(CASE WHEN YEAR(ShipDate) = 2022 AND DATEPART(QUARTER, ShipDate) = 2 THEN Quantity ELSE 0 END) AS '2022_Q2',
    SUM(CASE WHEN YEAR(ShipDate) = 2022 AND DATEPART(QUARTER, ShipDate) = 3 THEN Quantity ELSE 0 END) AS '2022_Q3',
    SUM(CASE WHEN YEAR(ShipDate) = 2022 AND DATEPART(QUARTER, ShipDate) = 4 THEN Quantity ELSE 0 END) AS '2022_Q4',
    SUM(CASE WHEN YEAR(ShipDate) = 2023 AND DATEPART(QUARTER, ShipDate) = 1 THEN Quantity ELSE 0 END) AS '2023_Q1',
    SUM(CASE WHEN YEAR(ShipDate) = 2023 AND DATEPART(QUARTER, ShipDate) = 2 THEN Quantity ELSE 0 END) AS '2023_Q2',
    SUM(CASE WHEN YEAR(ShipDate) = 2023 AND DATEPART(QUARTER, ShipDate) = 3 THEN Quantity ELSE 0 END) AS '2023_Q3',
    SUM(CASE WHEN YEAR(ShipDate) = 2023 AND DATEPART(QUARTER, ShipDate) = 4 THEN Quantity ELSE 0 END) AS '2023_Q4'
FROM 
    Orders
GROUP BY 
    ShipperID
ORDER BY 
    YEAR(ShipDate), DATEPART(QUARTER, ShipDate);
